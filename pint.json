{
  "preset": "laravel",
  "rules": {
    "align_multiline_comment": true,
    "blank_line_before_statement": {
      "statements": [
        "break",
        "case",
        "continue",
        "declare",
        "default",
        "do",
        "exit",
        "for",
        "foreach",
        "goto",
        "if",
        "include",
        "include_once",
        "phpdoc",
        "require",
        "require_once",
        "return",
        "switch",
        "throw",
        "try",
        "while",
        "yield",
        "yield_from"
      ]
    },
    "list_syntax": {
      "syntax": "short"
    },
    "multiline_comment_opening_closing": true,
    "no_extra_blank_lines": {
      "tokens": [
        "attribute",
        "break",
        "case",
        "continue",
        "curly_brace_block",
        "default",
        "extra",
        "parenthesis_brace_block",
        "return",
        "square_brace_block",
        "switch",
        "throw",
        "use",
        "use_trait"
      ]
    },
    "no_null_property_initialization": true,
    "no_useless_else": true,
    "ordered_class_elements": {
      "case_sensitive": true,
      "order": [
        "use_trait",
        "constant_public",
        "constant_protected",
        "constant_private",
        "property_public",
        "property_protected",
        "property_private",
        "construct",
        "destruct",
        "magic",
        "phpunit",
        "method_public",
        "method_protected",
        "method_private"
      ],
      "sort_algorithm": "none"
    },
    "phpdoc_align": true,
    "phpdoc_summary": true,
    "class_attributes_separation": {
      "elements": {
        "const": "only_if_meta"
      }
    }
  }
}