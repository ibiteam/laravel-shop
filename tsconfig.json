{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/manage/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["DOM", "ESNext"],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true
    },
    "include": ["resources/manage/**/*"]
}
